{% block style %} {%endblock%} {% block content %}

<main layout:fragment="content" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <!--main content-->
  <h1>TODO</h1>
  <div class="container">
    <a class="btn btn-secondary" href="">완료 Todo</a>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">번호</th>
          <th scope="col">할 일</th>
          <th scope="col">중요여부</th>
          <th scope="col">완료여부</th>
        </tr>
      </thead>
      <tbody>
        {%for todo in todos%}
        <tr>
          <th scope="row">{{ todo._id }}</th>
          <td>
            <a href="" text=""></a>
          </td>
          <td>
            <input type="checkbox" class="form-check-input" id="important"
            name="important" checked="" readonly
            {{'checked' if todo.important else''}}
            />
          </td>
          <td>
            <input type="checkbox" class="form-check-input" id="completed"
            name="completed" checked="" value=""
            {{'checked' if todo.important else''}}
            />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <form action="" method="post" id="comForm">
    <input type="hidden" name="id" value="" />
    <input type="hidden" name="completed" value="" />
  </form>
</main>
{%endblock%} {% block script %} {%endblock%}
